<Project  xmlns='http://schemas.microsoft.com/developer/msbuild/2003' >

	<PropertyGroup Label='OpenStrata Project Properties'>
		<OpenStrataProjectType Condition="'$(OpenStrataProjectType)' == ''">deployment</OpenStrataProjectType>
		<RestatifyDuplicateProjectTypes Condition="'$(RestatifyDuplicateProjectTypes)' != '' AND '$(OpenStrataProjectType)' != 'deployment' ">true</RestatifyDuplicateProjectTypes>
		<ProducesStrati>true</ProducesStrati>
		<IsPackable>false</IsPackable>
		<LocalImportSequence Condition="'$(LocalImportSequence)' == ''">99</LocalImportSequence>

		<SignAssembly Condition="'$(SignAssembly)' == ''">true</SignAssembly>

	</PropertyGroup>

	<PropertyGroup Label="Attach to DependsOn">

		<SpecifyStratiFilesDependsOn>
			SpecifyDeploymentStratiFiles;
			$(SpecifyStratiFilesDependsOn)
		</SpecifyStratiFilesDependsOn>

	</PropertyGroup>



	<ItemGroup>
		<OpenStrataProject Include="$(MSBuildProjectFullPath)">
			<OpenStrataProjectType>deployment</OpenStrataProjectType>
			<ProjectName>$(MSBuildProjectName)</ProjectName>
		</OpenStrataProject>
	</ItemGroup>

</Project>
