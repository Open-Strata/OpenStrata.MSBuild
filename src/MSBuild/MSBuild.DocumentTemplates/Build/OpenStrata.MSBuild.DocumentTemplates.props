<Project>

	<PropertyGroup Label='OpenStrata Project Properties'>
		<OpenStrataProjectType Condition="'$(OpenStrataProjectType)' == ''">documenttemplates</OpenStrataProjectType>
		<RestatifyDuplicateProjectTypes Condition="'$(RestatifyDuplicateProjectTypes)' != '' AND '$(OpenStrataProjectType)' != '$projecttype$' ">true</RestatifyDuplicateProjectTypes>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<OpenStrataProject Include="$(MSBuildProjectFullPath)">
			<OpenStrataProjectType>documenttemplates</OpenStrataProjectType>
			<ProjectName>$(MSBuildProjectName)</ProjectName>
		</OpenStrataProject>
	</ItemGroup>

	<PropertyGroup Label="Attach to DependsOn">
		<SpecifyStratiFilesDependsOn>
			SpecifyDocumentTemplateStratiFiles;
			$(SpecifyStratiFilesDependsOn)
		</SpecifyStratiFilesDependsOn>

		<PrepareForOpenStrataBuildDependsOn>
			$(PrepareForOpenStrataBuildDependsOn)
		</PrepareForOpenStrataBuildDependsOn>


		<PackDocsDependsOn>
			PackDocumentTemplates;
			$(PackDocsDependsOn)
		</PackDocsDependsOn>

		<UnpackDocsDependsOn>
			UnpackDocumentTemplates;
			$(UnpackDocsDependsOn)
		</UnpackDocsDependsOn>

	</PropertyGroup>



</Project>
